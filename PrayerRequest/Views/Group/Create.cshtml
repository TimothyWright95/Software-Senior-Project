@model Group
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Group/_GroupLayout.cshtml";
}

<h2>Create Prayer Request</h2>
<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="Create" asp-controller="Group">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="GroupName"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupDescription"></label>
                <textarea asp-for="GroupDescription" class="form-control" text-wrap:normal" type="text" rows="5" placeholder="Group description goes here. (Required)"></textarea>
                <span asp-validation-for="GroupDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupLocation"></label>
                <textarea asp-for="GroupLocation" class="form-control" text-wrap:normal" type="text" rows="5" placeholder="Location information goes here (not required)"></textarea>
                <span asp-validation-for="GroupLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupContact"></label>
                <textarea asp-for="GroupContact" class="form-control" text-wrap:normal" type="text" rows="5" placeholder="Contact information goes here  (not required)"></textarea>
                <span asp-validation-for="GroupContact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State"></label><select asp-for="State" asp-items="Html.GetEnumSelectList<PrayerRequest.Repository.States>()" class="form-control">
                    <option value="">-- Select State --</option>
                </select>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupOpen"></label>
                <select value="false" asp-for="GroupOpen" class="form-control" on onchange="passwordFunction(this.value)">
                    <option selected value="true">No</option>
                    <option value="false">Yes</option>
                </select>
                <span asp-validation-for="GroupOpen" class="text-danger"></span>
            </div>
            <div class="form-group" id="password" style="display:none">
                <label asp-for="GroupPassword"></label>
                <input asp-for="GroupPassword" class="form-control" type="password" />
                <span asp-validation-for="GroupPassword" class="text-danger"></span>
            </div>
            <div class="form-group" id="passwordcheck" style="display:none">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <input class="btn btn-primary" type="submit" value="Create Group" />
        </form>
    </div>
</div>
@section Scripts
{
    <script>

        function passwordFunction(value) {
            var x = document.getElementById("passwordcheck");
            var y = document.getElementById("password");
            if (value === 'false') {
                x.removeAttribute("style");
                y.removeAttribute("style");
            } else {
                x.style.display = "none";
                y.style.display = "none";
            }
        }
        
    </script>
    }