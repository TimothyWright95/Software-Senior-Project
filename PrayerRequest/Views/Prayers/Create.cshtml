@model Prayer
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Prayers/_PrayerLayout.cshtml";
}

<h2>Create Prayer Request</h2>
<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="Create" asp-controller="Prayers">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortDescription"></label>
                <input asp-for="ShortDescription" class="form-control" />
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expiration"></label>
                <input asp-for="Expiration" type="date" class="form-control" />
                <span asp-validation-for="Expiration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Catagorie"></label>
                <select asp-for="Catagorie" asp-items="Html.GetEnumSelectList<PrayerRequest.Repository.Catagorie>()" class="form-control">
                    <option value="">-- Select Catagorie --</option>
                </select>
                <span asp-validation-for="Catagorie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State"></label><select asp-for="State" asp-items="Html.GetEnumSelectList<PrayerRequest.Repository.States>()" class="form-control">
                    <option value="">-- Select State --</option>
                </select>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostAnonymous"></label>
                <select asp-for="PostAnonymous" class="form-control">
                    <option value="false">No</option>
                    <option value="true">Yes</option>
                </select>
                <span asp-validation-for="PostAnonymous" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LongDescription"></label>
                <textarea asp-for="LongDescription" class="form-control" text-wrap:normal" type="text" rows="5" placeholder="Longer description can go here (not required)"></textarea>
                <span asp-validation-for="LongDescription" class="text-danger"></span>
            </div>

            <input class="btn btn-primary" type="submit" value="Create Request" />
        </form>
    </div>
</div>

